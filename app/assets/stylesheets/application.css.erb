body {
	background-image: url('<%= asset_path("mainbg.png") %> ');
	font-family: 'Montserrat', sans-serif;
}


#basebg {
	background-image: url('<%= asset_path("travel.jpg") %> ');
	width: 810px;
	height: 398px;
	border: 12px solid RGBA(255, 93, 96, 0.97);
	border-radius: 3px;
	margin-top: 25px;
}

#info {
	
	width: 790px;
	height: 398px;
	color: white;
	padding-left: 5px;
	padding-right: 5px;
	display: inline;
}

#overlay {
	width: 790px;
	height: 398px;
	background-color: RGBA(43, 43, 43, 0.65);
}

#question {
	font-size: 25px;
}

#answers {
	width: 190px;
	height: 100px;
	background-color: RGBA(190, 248, 207, 0.5);
	margin-top: 293px;
	margin-left: 212px;
	border: solid 2px RGBA(177, 246, 203, 1.00);
	border-radius: 5px;
	display: inline;
	z-index: 5;
	position: absolute;
}


#geoquest {
	color: RGBA(255, 93, 96, 1.00);
	font-size: 70px;
	margin-bottom: 7px;
}

#geoquesttag {
	font-family: 'Kaushan Script', cursive;
	font-size: 24px;
	margin: 10px;
	color: RGBA(68, 67, 73, 0.7);
}

#submit {
	width: 75px;
	-webkit-transition: all .5s;
	background: RGBA(190, 248, 207, 1.00);
	line-height: 20px;
	text-align: center;
	font-weight: bold;
	color: RGBA(68, 67, 73, 0.7);
	border: 5px;
	border-radius: 10px;
	box-shadow: 0px 0px 2px rgba(0,0,0,.5),
		1px 1px 5px rgba(0,0,0,.3);
	cursor: pointer;


}

#submit:hover{
	background: RGBA(255, 93, 96, 1.00);
	color: RGBA(190, 248, 207, 1.00);
}

#googleMap {
	width: 500px;
	height: 380px;
	visibility: hidden;
}
	/*height: 380px;*/

/*#googleMapToggle {
	width: 500px;
	display: none;
}*/

#hint {
	border-radius: 10px;
}

.modal {
	position: fixed;
	left: 50%;
	top: 50px;
	width: 60%;
	padding: 30px;
	background-color: RGBA(146, 178, 178, 1.00);
	border-radius: 5px;
	box-shadow: 3px 3px RGBA(0, 0, 0, 0.5);
	-webkit-transform: translate(-50%, 0);
	transform: translate(-50%, 0);
	z-index: 2;
}

.modal-close {
	position: absolute;
	top: 10px;
	right: 10px;
}

.modal-shade{
	position: fixed;
	height: 100%;
	width: 100%;
	background-color: RGBA(0, 0, 0, 0.7);
	z-index: 1;
}

